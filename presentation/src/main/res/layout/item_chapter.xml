<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="vm" type="java.lang.String"/>

        <variable
            name="eventHolder"
            type="com.yju.presentation.view.pdf.adapter.PdfChapterAdapter.ChapterEventHandler" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:onClick="@{() -> eventHolder.onChapterClick(vm)}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tvPageNumber"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_primary"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvPageNumber"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvChapterTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vm}"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Chapter 1 ~ 10" />

                <TextView
                    android:id="@+id/tvWordCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text="10개 단어" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>