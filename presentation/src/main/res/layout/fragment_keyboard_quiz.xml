<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.yju.presentation.view.quiz.KeyboardQuizViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp">

        <!-- 상단 진행 상태 표시기 -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:progress="50"
            android:progressTint="#4285F4"
            android:background="#E0E0E0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 단계 표시 -->
        <TextView
            android:id="@+id/tvQuizStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="1/2 단계: 발음 맞추기"
            android:textSize="14sp"
            android:textColor="#757575"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 지시문 -->
        <TextView
            android:id="@+id/tvInstruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="아래 한자의 발음(후리가나)을 입력하세요"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#212121"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvQuizStep"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 한자 표시 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardKanjiQuiz"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F5F7FA"
            app:layout_constraintTop_toBottomOf="@id/tvInstruction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.25">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- 한자 표시 -->
                <TextView
                    android:id="@+id/tvKanjiInQuiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.word.kanji}"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="一形容詞"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 답변 입력 필드 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAnswer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#F5F7FA"
            app:layout_constraintTop_toBottomOf="@id/cardKanjiQuiz"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 답변 입력 필드 -->
            <EditText
                android:id="@+id/etAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="발음을 입력하세요"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="16dp"
                android:text="@{vm.userInput}"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:textSize="18sp"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- 버튼 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardAnswer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 힌트 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHint"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="4dp"
                android:text="힌트"
                android:textSize="16sp"
                android:textColor="#4285F4"
                app:cornerRadius="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="#4285F4"
                android:backgroundTint="#FFFFFF"
                app:rippleColor="#33000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnCheck"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="1"/>

            <!-- 확인 - 수정된 부분 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCheck"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="4dp"
                android:text="확인"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp"
                android:backgroundTint="#4285F4"
                app:rippleColor="#33FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnHint"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="1"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 개발용 스킵 (개발 중에만 표시) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="스킵 (개발용)"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            app:cornerRadius="8dp"
            android:backgroundTint="#F5F5F5"
            app:layout_constraintTop_toBottomOf="@id/buttonContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:alpha="0.7"/>

        <!-- 오류 메시지 표시 영역 -->
        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#F44336"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btnSkip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="정확한 발음을 입력해주세요."
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>