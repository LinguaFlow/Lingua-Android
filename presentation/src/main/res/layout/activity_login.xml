<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.yju.presentation.view.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="24dp">

        <!-- 로고 이미지 또는 앱 이름 -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="LinguaFlow"
            android:textColor="@color/primary"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo" />

        <TextView
            android:id="@+id/tv_app_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="일본어 학습의 새로운 시작"
            android:textColor="@color/gray_600"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_app_name" />

        <!-- 로그인 안내 텍스트 -->
        <TextView
            android:id="@+id/tv_login_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="소셜 계정으로 간편하게 시작하세요"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/ll_login_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 소셜 로그인 버튼들 -->
        <LinearLayout
            android:id="@+id/ll_login_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- 카카오 로그인 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_kakao_login"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_kakao_login_button"
                android:drawableStart="@drawable/ic_kakao"
                android:drawablePadding="12dp"
                android:onClick="@{() -> vm.onClickKakaoLogin()}"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="카카오 로그인"
                android:textColor="@color/kakao_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 네이버 로그인 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_naver_login"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_naver_login_button"
                android:drawableStart="@drawable/ic_naver"
                android:drawablePadding="12dp"
                android:onClick="@{() -> vm.onClickNaverLogin()}"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="네이버 로그인"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 하단 정보 텍스트 -->
        <TextView
            android:id="@+id/tv_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="© 2025 LinguaFlow"
            android:textColor="@color/gray_400"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>