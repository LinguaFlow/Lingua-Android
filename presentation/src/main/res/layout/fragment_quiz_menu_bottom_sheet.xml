<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.yju.presentation.view.quiz.sheet.QuizMenuBottomSheetViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="16dp">

        <!-- 타이틀 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="퀴즈 메뉴"
            android:textColor="#202124"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 첫 번째 행: 아이콘 그룹 -->
        <LinearLayout
            android:id="@+id/llIconRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <!-- 키보드 퀴즈 -->
            <LinearLayout
                android:id="@+id/btnKeyboardQuiz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> vm.onKeyboardQuizSelected()}"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="@drawable/circle_background"
                    app:tint="#202124" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="키보드 퀴즈"
                    android:textColor="#202124"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 객관식 퀴즈 -->
            <LinearLayout
                android:id="@+id/btnMultipleChoiceQuiz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> vm.onMultipleChoiceQuizSelected()}"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    android:background="@drawable/circle_background"
                    app:tint="#202124" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="객관식 퀴즈"
                    android:textColor="#202124"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 단어 상세 -->
            <LinearLayout
                android:id="@+id/btnWordDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> vm.onWordDetailSelected()}"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:background="@drawable/circle_background"
                    app:tint="#202124" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="단어 상세"
                    android:textColor="#202124"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/llIconRow" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>