<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.yju.presentation.view.quiz.MultipleChoiceQuizViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp">

        <!-- 상단 진행 상태 표시기 -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:background="#E0E0E0"
            android:progress="100"
            android:progressTint="#4285F4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 단계 표시 -->
        <TextView
            android:id="@+id/tvQuizStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="2/2 단계: 의미 선택하기"
            android:textColor="#757575"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 지시문 -->
        <TextView
            android:id="@+id/tvInstruction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="아래 단어의 의미로 맞는 것을 고르세요"
            android:textAlignment="center"
            android:textColor="#212121"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvQuizStep"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 한자 표시 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardKanjiMultipleChoice"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="#F5F7FA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInstruction"
            app:layout_constraintHeight_percent="0.18">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvKanjiInMultipleChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.word.kanji}"
                    android:textColor="#212121"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tvFurigana"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="空く" />

                <TextView
                    android:id="@+id/tvFurigana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@{vm.word.furigana}"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tvKanjiInMultipleChoice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="あく" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 객관식 선택지 버튼들 - 기존 코드 유지 -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/cardKanjiMultipleChoice"
            app:layout_constraintBottom_toTopOf="@id/btnSkip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 기존 선택지 유지 -->
                <TextView
                    android:id="@+id/btnOptionA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_option_default"
                    android:gravity="center"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    tools:text="명사 : 사랑" />

                <TextView
                    android:id="@+id/btnOptionB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_option_default"
                    android:gravity="center"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    tools:text="형용사 : 원하다" />

                <TextView
                    android:id="@+id/btnOptionC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_option_default"
                    android:gravity="center"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    tools:text="동사 : 먹다" />

                <TextView
                    android:id="@+id/btnOptionD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_option_default"
                    android:gravity="center"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    tools:text="명사 : 시간" />
            </LinearLayout>
        </ScrollView>

        <!-- 개발용 스킵 버튼 - 기존 코드 유지하되 MaterialButton으로 변경 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:text="스킵 (개발용)"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:backgroundTint="#F5F5F5"
            app:cornerRadius="8dp"
            app:rippleColor="#33000000"
            android:alpha="0.7"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 정답/오답 표시 영역 -->
        <FrameLayout
            android:id="@+id/resultOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <ImageView
                        android:id="@+id/ivResult"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/ic_dialog_info"
                        app:tint="#4CAF50"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:id="@+id/tvResultTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="정답입니다!"
                        android:textColor="#212121"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvResultMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="다음 단계로 넘어갑니다."
                        android:textColor="#757575"
                        android:textSize="16sp" />

                    <!-- 계속하기 버튼 - 디자인 통일 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnContinue"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        android:text="계속하기"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#4285F4"
                        app:cornerRadius="12dp"
                        app:rippleColor="#33FFFFFF"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>